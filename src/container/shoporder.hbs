{{#with navigation}}
    <div class="card m-2 ms-1">
        <ul class="nav p-3">
            {{#each links}}
                {{#if @last}}
                    <li><a class="nav-link disabled" href="{{href}}" target="_blank">{{text}}</a></li>
                {{else}}
                    <li class="nav-item ms-3">
                    <li><a class="nav-link" href="{{href}}" target="_blank">{{text}}</a></li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
{{/with}}
<div>
    <h1 class="title m-5 ms-1">{{header}}</h1>
</div>
    <div class="row">
    {{#with contacts_data}}
        <div class="col-8">
            <h3 class="title ms-2 m-3">{{title}}</h3>
            {{#each buttons}}
                {{#if isPrimary}}
                    <a href="#" class="btn btn-warning m-2">{{text}}</a>
                {{/if}}
                {{#if isOutline}} 
                    <a href="#" class="btn btn-outline-warning">{{text}}</a>
                {{/if}}
            {{/each}} 

            <div class="row">
            {{#with form}} 
                {{#each input}}
                <div class="col-6 g-2">
                    <div class="g-2 ps-2 mb-2 mt-2 ms-2">
                        <label  class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}" type="text">
                        <div class="form-text">{{caption}}
                        </div>
                    </div>
                </div>
                {{/each}}
            
            </div>
                 {{#each switch}}
            <div class="pt-2 mb-3 mt-3">  
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" {{#if @first}} checked {{/if}}>
                <label class="form-check-label">{{#if isActive}} {{text}} {{else}} {{text}} {{/if}}</label>
            </div>
            </div>
        {{/each}}
        {{/with}}
        </div>
    {{/with}}          
    
            <div class="col-4"> 
                <div class="card p-2">
                {{#each action_block}}
                    <a {{#if isSuccess}} class="btn btn-success m-1" {{/if}}
                    {{#if isDanger}} class="btn btn-danger m-1" {{/if}}
                    {{#if isInfo}} class="btn btn-info m-1" {{/if}}>{{text}}</a>  
                {{/each}}
                </div>            
                    <hr>
                    
                {{#with total}} 
                    <div class="card mb-3 ps-2">
                        <h2 class="mb-2 mt-2">{{title}}</h2>
                        {{#each item_list}}
                            <span class="pb-1">{{name}} {{price}}</span>    
                        {{/each}}
                        <hr class="m-2">
                        {{#each additional_info}}
                            <span class="pb-1">{{text}} {{value}}</span> 
                        {{/each}}
                        <hr class="m-2">
                        <div class="g-2">
                            {{#each button}}
                                <a {{#if isPrimary}} class="btn btn-primary" {{/if}} 
                                {{#if isOutline}} class="btn btn-outline-primary mt-2 mb-2" {{/if}}>{{text}}</a>
                            {{/each}}
                    </div>
                {{/with}} 
             </div>
    </div>
       
         <div class="mb-3">
        <hr>
        </div>
   
<div class="row">  
        {{#with delivery}}
        <div class="col-8">
                <h2 class="mb-3">{{title}}</h2>
                <div class="card mb-3 p-1"> 
                    <div class="row">
                        {{#each select}}
                            <div class="col-6 mb-3 mt-2">
                                <label class="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{vlaue}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        {{/each}}
                    </div>
                </div>   
            <div class="row">
                {{#each delivery_type}}
                    <div class="form-check g-2 ms-3">
                        <input class="form-check-input" type="radio" {{#if @first}} checked {{/if}}>
                        <label class="form-check-label">{{type}}</label>
                    </div>
                {{/each}}
            </div>  
            <hr class="mt-3 mb-3">
            {{#with payment}} 
                <h2>{{title}}</h2>
                {{#each list}}
                    <div class="form-check g-2 ms-3">
                        <input class="form-check-input" type="radio" {{#if @first}} checked {{/if}}>
                        <label class="form-check-label">{{type}}</label>
                        <div class="text-xs pt-2">{{description}}</div>
                    </div>
                {{/each}}
            {{/with}}  
            <hr class="m-3 ms-1">
            {{#with contact}}  
                <h2>{{title}}</h2> 
                <div class="row">
                    {{#with surname}}
                        <div class="col-6 g-2 ps-3 mb-2">
                            <label  class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}" type="text">
                            <div class="form-text">{{caption}}
                            </div>
                        </div>
                    {{/with}}
                {{#with name}}
                    <div class="col-6 g-2 ps-3 mb-2">
                        <label  class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}" type="text">
                        <div class="form-text">{{caption}}
                        </div>
                    </div>
                {{/with}}
                {{#with phone}}
                    <div class="col-6 g-2 ps-3 mb-2">
                        <label  class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}" type="text">
                        <div class="form-text">{{caption}}
                        </div>
                    </div>
                {{/with}}
                {{#with email}}
                    <div class="col-6 g-2 ps-3 mb-2">
                        <label  class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}" type="text">
                        <div class="form-text">{{caption}}
                        </div>
                    </div>
                {{/with}}
            {{/with}}
            <hr class="mt-3 mb-3">
            {{#with coment}}
                <div class="mb-3 ms-1">
                    <label class="form-label">{{label}}</label>
                    <input class="form-control"  placeholder="{{placeholder}}">
                </div>
            {{/with}}
        </div>      
        {{/with}}

        <hr class="mt-3 mb-3">
        {{#with coupon}}
            <div class="col-12 g-3 ms-1">
                <h2 class="mt-2">{{title}}</h2>
                {{#with select}}
                    {{#with availabel_coupon}}
                        <label class="form-label">{{label}}</label>
                        <select class="form-select mb-3">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                    {{/with}}
                    {{#with friend_coupon}}
                        <label class="form-label">{{label}}</label>
                        <select class="form-select form-select-sm">
                            <option selected>{{placeholder}}</option>
                                {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                    {{/with}}
                {{/with}}
                {{#with add}}
                    {{#with friend}}
                        <label class="form-label mt-3">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div  class="form-text"> {{caption}}</div>
                    {{/with}}
                    {{#with colleague}}
                        <label class="form-label mt-2">{{label}}</label>
                        <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                        <div  class="form-text mb-4"> {{caption}}</div>
                    {{/with}}
                {{/with}}
            </div>
        {{/with}} 
            <hr>
    {{#with quiz}}
        <h2 class="mt-2 ms-1">{{title}}</h2>
        {{#with preference}}
         <div class="ms-2 mb-2">
            <span>{{title}}</span>
            {{#each options}}
                <div class="form-check">
                    <input class="form-check-input" type="radio" {{#if @first}} checked {{/if}}>
                    <label class="form-check-label">
                        {{[]}}
                    </label>
                </div>
            {{/each}}
         </div>
        {{/with}}
        {{#with your_expirience}}
            <div class="mb-3 mt-3 ms-1">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="">
            </div>
        {{/with}}
        {{#with purchase_frequency}}
        <div class="mb-3 mt-3 ms-1">
            <label class="form-label">{{label}}</label>
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/with}}
        {{#with factors}}
        <div class="mb-3 ms-1">
            <p>{{title}}</p>
            {{#each options}}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" {{#if @first}} checked {{/if}}>
                    <label class="form-check-label">
                    {{[]}}
                    </label>
                </div>
            {{/each}}
        </div>
        {{/with}}
    {{/with}}
    <hr class="mt-4 mb-4">
     <div class="row g-3"> 
        {{#each footer}}
            <div class="nav col-2">  
                <div> 
                    {{#each this}} 
                        <div>
                            <a class="nav-link active text-lowercase {{#if @last}} disabled {{/if}}" href="{{this.link}}" target="_blank">{{this.text}}</a>
                        </div>
                    {{/each}} 
                </div>
            </div>
        {{/each}}
    </div>
</div>