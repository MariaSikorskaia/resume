{{#with navigation}}
    <div class="card m-2 ms-1">
        <ul class="nav p-3">
            {{#each links}}
                {{#if @last}}
                    <li><a class="nav-link disabled" href="{{href}}" target="_blank">{{text}}</a></li>
                {{else}}
                    <li class="nav-item ms-3">
                    <li><a class="nav-link" href="{{href}}" target="_blank">{{text}}</a></li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
{{/with}}
<div>
    <h1 class="title mt-4 ms-1">{{header}}</h1>
</div>
    <div class="row">
        {{#with contacts_data}}
            <div class="col-8">
                <h3 class="title ms-1 mt-3">{{title}}</h3>
                {{#each buttons}}
                    {{#if isPrimary}}
                        <a href="#" class="btn btn-warning">{{text}}</a>
                    {{/if}}
                    {{#if isOutline}} 
                        <a href="#" class="btn btn-outline-warning">{{text}}</a>
                    {{/if}}
                {{/each}} 
                <div class="row">
                    {{#with form}}
                        {{#each input}}
                            <div class="col-6 g-2 ps-3 mb-2">
                                <label  class="form-label">{{label}}</label>
                                <input class="form-control" placeholder="{{placeholder}}" type="text">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        {{/each}}       
                        <div class="mb-3">
                            <hr>
                        </div>
                        <div class="row">
                            {{#each switch}}
                                <div class="col-12 pt-2 mb-3">  
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" {{#if @first}} checked {{/if}}>
                                    <label class="form-check-label">{{#if isActive}} {{text}} {{else}} {{text}} {{/if}}</label>
                                </div>
                                </div>
                            {{/each}}
                        </div>
                    {{/with}}
                </div>
            </div>
        {{/with}}
    <div class="mb-3">
        <hr>
    </div>
    <div class="row">
        <div class="card col-6 mb-4 p-1">
            {{#each action_block}}
                <div class="d-grid col-8 m-2"> 
                    <a {{#if isSuccess}} class="btn btn-success" {{/if}}
                    {{#if isDanger}} class="btn btn-danger" {{/if}}
                    {{#if isInfo}} class="btn btn-info" {{/if}}>{{text}}</a>
            </div>
            {{/each}}
        </div>
    </div>
    <hr class="mb-5">
   {{#with total}} 
        <div clas="row">
        <div class="card col-6 mb-3">
            <h2 class="mb-2 mt-2">{{title}}</h2>
            {{#each item_list}}
                   <span class="pb-1">{{name}} {{price}}</span>    
            {{/each}}
            <hr class="m-2">
            {{#each additional_info}}
               <span class="pb-1">{{text}} {{value}}</span> 
            {{/each}}
            <hr class="m-2">
            <div class="col-8 g-2 m-1 pb-2">
                {{#each button}}
                    <a {{#if isPrimary}} class="btn btn-primary mb-2" {{/if}} 
                        {{#if isOutline}} class="btn btn-outline-primary" {{/if}}>{{text}}</a>
                {{/each}}
            </div>
        </div>
        </div>
    </div>
   {{/with}}
   <hr class="mt-4 mb-5">
   {{#with delivery}}
        <h2 class="mb-3">{{title}}</h2>
        <div class="row">
            <div class="card mb-2">
            <div class="row">
                {{#each select}}
                    <div class="col-6 mb-3 mt-2">
                        <label class="form-label">{{label}}</label>
                       <select class="form-select">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                         <option value="{{vlaue}}">{{text}}</option>
                        {{/each}}
                        </select>
                    </div>
                {{/each}}
            </div>
            </div>   
        <div class="row">
            {{#each delivery_type}}
                <div class="form-check g-2 ms-3">
                    <input class="form-check-input" type="radio" {{#if @first}} checked {{/if}}>
                    <label class="form-check-label">{{type}}</label>
                </div>
            {{/each}}
        </div>  
        <hr class="mt-3 mb-3">
        {{#with payment}} 
            <h2>{{title}}</h2>
            {{#each list}}
                <div class="form-check g-2 ms-3">
                    <input class="form-check-input" type="radio" {{#if @first}} checked {{/if}}>
                    <label class="form-check-label">{{type}}</label>
                    <div class="text-xs pt-2">{{description}}</div>
                </div>
            {{/each}}
        {{/with}}  
        <hr class="m-3 ms-1">
        {{#with contact}}  
            <h2>{{title}}</h2> 
            <div class="row">
                {{#with surname}}
                    <div class="col-6 g-2 ps-3 mb-2">
                        <label  class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}" type="text">
                        <div class="form-text">{{caption}}
                        </div>
                    </div>
                {{/with}}
                 {{#with name}}
                    <div class="col-6 g-2 ps-3 mb-2">
                        <label  class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}" type="text">
                        <div class="form-text">{{caption}}
                        </div>
                    </div>
                {{/with}}
                 {{#with phone}}
                    <div class="col-6 g-2 ps-3 mb-2">
                        <label  class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}" type="text">
                        <div class="form-text">{{caption}}
                        </div>
                    </div>
                {{/with}}
                 {{#with email}}
                    <div class="col-6 g-2 ps-3 mb-2">
                        <label  class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}" type="text">
                        <div class="form-text">{{caption}}
                        </div>
                    </div>
                {{/with}}
            </div>
        {{/with}}
        <hr class="mt-3 mb-3">
        {{#with coment}}
            <div class="mb-3 ms-1">
                <label class="form-label">{{label}}</label>
                 <input class="form-control"  placeholder="{{placeholder}}">
            </div>
        {{/with}}
   {{/with}}
    <hr class="mt-3 mb-3">
    {{#with coupon}}
        <h2>{{title}}</h2>
            {{#with select}}
            {{#with availabel_coupon}}
                <label class="form-label">{{label}}</label>
                    <select class="form-select mb-3">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
            {{/with}}
            {{#with friend_coupon}}
                <label class="form-label">{{label}}</label>
                    <select class="form-select-sm mb-3">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
            {{/with}}
            {{/with}}
            {{#with add}}
                {{#with friend}}
                    <label class="form-label mt-3">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div  class="form-text"> {{caption}}</div>
                {{/with}}
                {{#with friend}}
                    <label class="form-label mt-4">{{label}}</label>
                    <input class="form-control=sm" placeholder="{{placeholder}}">
                    <div  class="form-text"> {{caption}}</div>
                {{/with}}
            {{/with}}

    {{/with}}