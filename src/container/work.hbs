{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    
   {{#with main}}
    <main>
        <section>
          <b> {{> title big=true data="Work history"}}</b>
          <div>
            <ul>
                {{#each works}}
                   <li>
                        <div>{{position}}</div>

                        <br>

                                <div>
                                    {{duration.from}}-
                                    {{#if duration.to}} 
                                    {{duration.to}} 
                                    {{else}} (досі працюємо){{/if}}
                                </div>

                        <br>
                        <div>{{company.name}} </div>

                        <br>
                        <br>
                        <div><strong>Projects ({{projectAmount}})</strong></div>

                        <br>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{name}}</div>
                                 <div>{{> link text=name href=url blank=true noLine=true}} </div>
                                  <br>
                                 <div>
                                    <p>{{about}}</p>
                                 </div>
                                 <br>
                                 <div><em>Project stacks ({{stacksAmount}})</em></div>
                                   
                                 <br>                               
                                 <ul>
                                    {{#each stacks}}
                                    <li>
                                       {{name}} 
                                    </li>
                                    {{/each}}
                                 </ul>
                                 <br>
                                 <div><em>Project awards ({{awardsAmount}})</em></div>  
                                 <br>
                                 <ul>
                                    {{#each awards}}
                                    <li>
                                        {{name}}
                                    </li>
                                    {{/each}}
                                 </ul>
                            </li>
                            {{/each}}
                        </ul>
                   </li>
                   <br>
                {{/each}}
            </ul>
          </div>
        </section>
    {{/with}}
</div>

