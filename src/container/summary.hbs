{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <header>
        <div>
           <h1> {{name.firstname}} {{name.lastname}} </h1>
        </div>
        <div>
           <b> {{position}} </b>
        </div>

        <div>
            {{salary}}
        </div>        
    </header>
   {{#with main}}
    <main>
       <section>
        <div class="row">
  <div class="col-sm-6 mb-3">
    <div class="card pb-5">
      <div class="card-body">
        <h5 class="card-title">{{> title big=true data="Summary"}}</h5>
        <p class="card-text">{{summary.text }}</p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
         {{#with experience}}
        <section>
       <h5>{{> title big=false data="Other Experince"}}</h5>
          <p class="card-text">
             {{text}}
          </p>
        </section>
        {{/with}}
      </div>
    </div>
  </div>
</div>
       </section>
    </main>
   {{/with}}
</div>

