{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
  {{#with main}}
     <main> 
        <section>
          <div class="card">
            <div class="card-header mb-3">
              <b>{{> title big=true data="All skills"}}</b>
            </div>

              <ul class="list-group list-group-flush">
                {{#each skills}}
                <div class="ms-3 mb-3">
                  {{name}} 
                  {{#if point includeZero=true}} ({{point}}) {{/if}}

                  {{#if isTop}} (top) {{/if}}

                  {{#unless point includeZero=true}} (не вивчаємо) {{/unless}}
                  {{#unless point}}
                   {{#if point includeZero=true}} 
                   (ще вивчаємо)
                   {{/if}}
                  {{/unless}}
                </div>
                {{/each}}
            </ul>

          </div>
        </section>

         <section>
          <div class="card">
            <div class="card-header mb-3">
              <b> {{> title big=false data="My hobbies"}}</b>
            </div>
            <ul>
              {{#each hobbies}}
              <div class="mb-3">
                {{name}}
                  {{#if isMain}} (favourite){{/if}}
              </div>
              {{/each}}
            </ul>
        </section>
     </main>
   {{/with}}
</div>

