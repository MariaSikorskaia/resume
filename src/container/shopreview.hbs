{{#with navigation}}
    <div class="card mt-2">
        <ul class="nav p-2">
            {{#each links}}
                {{#if @last}}
                    <li><a class="nav-link disabled" href="{{href}}" target="_blank">{{text}}</a></li>
                {{else}}
                    <li class="nav-item">
                    <li><a class="nav-link" href="{{href}}" target="_blank">{{text}}</a></li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
{{/with}}

<div class="row">
    <div class="col-8 ms-1">
        {{#with formBlock}}       
            <h2 class="mt-5">{{header}}</h2>
            {{#with rating}}
                <p class="mt-3">{{title}} {{value}}</p>
            {{/with}}
            {{#with actionBlock}}
                    <ul class="nav nav-tabs">
                        {{#each tabs}}
                        <li class="nav-item">
                            {{#if isActive}}
                        <a class="nav-link active fw-medium" href="#">{{text}}</a>
                        {{else}}
                        </li>
                         <li class="nav-item">
                        <a class="nav-link" href="#">{{text}}</a>
                         </li>
                         {{/if}}
                        {{/each}}
                    </ul>
                    <hr class="mt-5 mb-5">
                    {{#with report}}
                        <div class="card">
                            <div class="card-body">
                                <p>{{title}}</p>
                                <a href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a>
                            </div>
                        </div>
                    {{/with}}
            {{/with}}
    </div>
            
       <div class="col-4">
        {{#with goodsInfo}}
                <div class="card">
                    <div class="card-body">
                        <img src="{{photo}}" class="card-img" alt="...">
                    </div>
                    <h5 class="fw-semibold ms-3">{{name}}</h5>
                </div>
                <div class="card mt-2">
                    <div class="card-body">
                        <h5 class="fw-medium">{{price}}</h5>
                        {{#if inMarket}}
                        <p>Є в наявності</p>
                        {{/if}}
                        {{#each buttons}}
                            {{#if isPrimary}}
                            <a href="{{link}}" class="btn btn-primary mb-2">{{text}}</a>
                            {{/if}}
                            {{#if isSecondary}}
                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
        {{/with}}
       </div>
        <hr class="mt-5 mb-5">
    {{/with}}
</div>